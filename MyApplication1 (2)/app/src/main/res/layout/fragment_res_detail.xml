<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:id="@+id/res_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-04-22"
            android:textSize="12sp"
            android:textColor="@color/item_detail_text"/>
        <TextView
            android:id="@+id/res_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="OrderNum 0000"
            android:textSize="12sp"
            android:textColor="@color/item_detail_text"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/res_product_img"
            android:layout_width="109dp"
            android:layout_height="109dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="17dp">
            <TextView
                android:id="@+id/res_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="Product Name"
                android:textSize="16sp"
                android:textColor="@color/mBlack"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">
                <TextView
                    android:id="@+id/res_product_price_text"
                    android:text="Price"/>
                <TextView
                    android:id="@+id/res_product_price"
                    android:layout_gravity="right"
                    android:text="1000000" />
                <TextView
                    android:id="@+id/res_delivery_price_text"
                    android:text="Delivery Price"/>
                <TextView
                    android:id="@+id/res_delivery_price"
                    android:layout_gravity="right"
                    android:text="1000000" />
                <TextView
                    android:id="@+id/res_total_price_text"
                    android:text="Total Price"/>
                <TextView
                    android:id="@+id/res_total_price"
                    android:layout_gravity="right"
                    android:text="1000000" />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp">
        <TextView
            android:id="@+id/res_address_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="12sp"
            android:textColor="@color/item_detail_text"/>

        <TextView
            android:id="@+id/res_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Real Address"
            android:textSize="12sp"
            android:textColor="@color/item_detail_text"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_delivery_inquiry"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="8dp"
        android:text="Inquiry"
        android:textSize="12sp"
        android:textColor="@color/mWhite"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/btn_change_defective_item"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="8dp"
        android:text="Change Item"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:background="@color/mWhite"/>

    <Button
        android:id="@+id/btn_res_order_cancel"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="8dp"
        android:text="Order Cancel"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:background="@color/mWhite"/>
</LinearLayout>