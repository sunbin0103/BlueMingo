<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/option_select_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select option"
            android:textSize="15sp"
            android:textColor="@color/option_name"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/btn_option_del"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:text="x"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_option_number_minus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="-"/>
        <TextView
            android:id="@+id/option_number"
            android:layout_width="29dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="1"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"/>
        <Button
            android:id="@+id/btn_option_number_plus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="+"/>

        <TextView
            android:id="@+id/option_select_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000 Won"
            android:textSize="15sp"
            android:textColor="@color/trans_price"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</LinearLayout>