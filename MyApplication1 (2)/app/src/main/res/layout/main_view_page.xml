<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:context="com.top_adv.myapplication1.MainViewPage">
    <!--
        <include
            layout="@layout/content_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/main_fragment_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mWhite">


        <ImageButton
            android:id="@+id/btn_home"
            android:onClick="onButtonClick_Bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/mWhite"
            android:src="@mipmap/icon_09"
            android:layout_weight="1"
            android:text="Home"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_user"
            android:onClick="onButtonClick_Bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/mWhite"
            android:src="@mipmap/icon_10"
            android:layout_weight="1"
            android:text="User"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
